<div id="trouble_state_wrapper">
  <% parent_region ||= params[:parent_region] %>
  <% country = Carmen::Country.coded(parent_region) %>

  <% if country.nil? %>
    <em>国を先に選択してください</em>
  <% elsif country.subregions? %>
    <%= subregion_select(:trouble, :region, parent_region) %>
  <% else %>
    <%= text_field(:trouble, :region) %>
  <% end %>
</div>
